<h1>My tasks</h1>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
    <% else %>
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
  <hr>
  <%= link_to '<i class="fas fa-plus"></i> Add a new task'.html_safe, new_task_path %>
</ul>
