<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p>
  <% if @task.completed %>
      <input type="checkbox" class="form-check-input" id="exampleCheck1" checked><%= 'This task is completed' %>
  <% else %>
      <input type="checkbox" class="form-check-input" id="exampleCheck1"><%= 'This task is not completed' %>
  <% end %>
</p>


<%= link_to "Edit this task", edit_task_path, class: "btn btn-primary" %>


<%= link_to '<i class="fas fa-undo-alt"></i> back to list'.html_safe, tasks_path %>
